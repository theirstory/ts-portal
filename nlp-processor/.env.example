# Weaviate Configuration
WEAVIATE_HOST_URL=weaviate
WEAVIATE_PORT=8080
WEAVIATE_SECURE=false

# Chunking Configuration
CHUNK_SECONDS=30
CHUNK_OVERLAP_SECONDS=8
MIN_WORDS_PER_CHUNK=10
MIN_CHARS_PER_CHUNK=50
MAX_WORDS_PER_CHUNK=200
PREFER_SENTENCE_BREAKS=true
LOOKAHEAD_SECONDS=3.0

# NER Configuration
CONFIG_PATH=../config.json
NER_LABELS=person,organization,location,date,event,technology

# GLiNER Model Configuration
GLINER_MODEL=urchade/gliner_multi-v2.1
GLINER_THRESHOLD=0.3
GLINER_LOAD_TIMEOUT_SECONDS=240
MIN_TEXT_LENGTH_FOR_NER=50

# HuggingFace Local Embeddings Configuration
# Default (multilingual, Spanish/English)
EMBEDDING_MODEL=sentence-transformers/LaBSE

# Alternatives:
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # Lighter and faster fallback if LaBSE fails
# EMBEDDING_MODEL=BAAI/bge-m3  # Higher quality, multilingual
EMBEDDING_LOAD_TIMEOUT_SECONDS=180

# GPU Configuration (requires CUDA to be installed)
USE_GPU=false
